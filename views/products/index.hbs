{{#extends "base"}}

{{#block "content"}}
<h1>Search for Product</h1>
<form method="GET">
    {{{form}}}
    <input type="submit" class="btn btn-primary mt-3"/>
</form>

<h2>Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Category</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category.name}}</td>
            <td>
                {{#each this.tags}}
                    <span class="badge bg-primary">{{this.name}}</span>
                {{/each}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update"
                    class="btn btn-primary btn-sm"
                >Update</a>
                <a href="/products/{{this.id}}/delete"
                    class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}